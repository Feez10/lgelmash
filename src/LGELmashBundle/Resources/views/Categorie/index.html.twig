{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Liste des catégories</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>#</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.libelle }}</td>
                <td>
                    <a href="{{ path('categories_show', { 'id': entity.id }) }}">Voir</a>
                    <a href="{{ path('categories_edit', { 'id': entity.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}">+ Créer une nouvelle catégorie</a>

{% endblock %}